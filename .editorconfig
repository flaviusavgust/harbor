# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = LF
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 160

[*.{yml,yaml,yml.j2,yaml.j2}]
indent_size = 2

[*.{json,json.j2}]
indent_size = 2

[*.{tf,tfvars}]
indent_size = 2

[*.{md,markdown}]
max_line_length = 180
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.go]
indent_style = tab

[COMMIT_EDITMSG]
max_line_length = 0
